<body>
  <%- include('./partials/nav.ejs') %>

  <div class="row mx-0">
    <!-- (SIDEBAR)CATEGORY LIST START -->
    <%- include('./partials/sidebar.ejs') %>
    <!-- (SIDEBAR)CATEGORY LIST END -->

    <div class="col-lg-10 col-md-9 col-sm-8 mt-2">

      <div class="alert alert-dark" role="alert">
        <h1>404 - Page Not Found or Something went Wrong..</h1>
      </div>

      <h2 class="text-center">
        Add new note
      </h2>
      <div>
        <form action="/newNote" method="POST">
          <div class="form-group">
            <label for="username">Username</label>
            <input type="text" name="username" class="form-control" id="username" placeholder="Enter username" required>
          </div>
          <div class="form-group">
            <label for="note">Todo note</label>
            <textarea class="form-control" name="note" id="note" rows="2" placeholder="Enter your note here" required></textarea>
          </div>
          <button type="submit" class="btn btn-sm btn-secondary mb-3">Submit</button>
        </form>
      </div>




    </div>
  </div>

